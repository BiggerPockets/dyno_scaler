<div class="mb-4"><%= header("Pipelines") %></div>

<div id="pipelines">
  <% @pipelines.each do |pipeline| %>
    <%= render pipeline %>
  <% end %>
</div>

<% if current_user.has_role?(:manager, current_organisation) %>
  <div class="p-2">
    <%= link_to("New pipeline", new_pipeline_path, class: blue_button_class) %>
  </div>
<% end %>
